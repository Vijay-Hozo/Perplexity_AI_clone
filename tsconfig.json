{
  "compilerOptions": {
    "types": [
      "react",
      "react-dom"
    ],
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/(routes)/search/[libId]/_components/DisplayResult.jsx",
    "inngest/client.js",
    "app/(routes)/discover/page.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
